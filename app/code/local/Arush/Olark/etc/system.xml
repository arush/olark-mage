<?xml version="1.0"?>
<config>
    <tabs>
	<arush translate="label" module="olark">
	    <label>Arush</label>
	    <sort_order>100</sort_order>
	</arush>
    </tabs>
    <sections>
        <olark translate="label comment" module="olark">
            <tab>arush</tab>
            <label>Olark</label>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                
                <chat translate="label comment" module="olark">
                    <label>Olark Chat</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <olark_on translate="label">
                            <label>Olark On</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </olark_on>
			<olark_code translate="label">
                            <label>Olark Site ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Just the ID in the format XXXX-XXX-XX-XXXX]]></comment>
                        </olark_code>
			<olark_name translate="label">
                            <label>Add user's name and email address to Olark?</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This will update your chat system with the registered full name + email address (their chat username will become: Fred Wilson | fred@avc.com )<br/><br/>It will also update your CRM system with Magento details if configured correctly in Olark. ]]></comment>
                        </olark_name>
			
			<olark_hesitation translate="label">
                            <label>Notify operator if visitor hesitates?</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Please define hesitation below]]></comment>
                        </olark_hesitation>
                        
                        <olark_millisecs translate="label">
                            <label>How many milliseconds is considered a hesitation?</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Hesitations count for the same page only ]]></comment>
                        </olark_millisecs>
                        
                        
                    </fields>
                </chat>
            </groups>
        </olark>
    </sections>
</config>
